<h1>MegaNotes</h1>

<div class="form-search">
<%= form_tag notes_path, :method => 'get', :id => "notes_search"  do %>
  <p>
    <%= text_field_tag :search, params[:search], :placeholder => "Search for a note..." , :class => 'input-large search-query' %>
    <%= submit_tag "Search", :name => nil, :class => "btn" %>
  </p>
<% end %>
</div>

<div id="loco"> <%= render 'notes' %></div>

<br />

<%= link_to 'New Note', new_note_path, :class => "btn btn-success" %>


 